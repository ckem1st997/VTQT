@model AuditCouncilModel
@{
    Layout = null;
}

<div class="form fixed-layout-form">
    <form data-form-type="ajax" class="form-horizontal">
        <div class="form-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Sửa hội đồng kiểm kê</h4>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.AuditId)

                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.EmployeeId, true, new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.DropDownListFor(m => m.EmployeeId, Model.AvailableUsers, "Chọn nhân viên", new { @class = "form-control", style = "width: 100%" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.Role, true, new { @class = "control-label col-md-3" }, true)
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.Role, new { htmlAttributes = new { style = "width: 100%" } })
                    </div>
                </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="submit" class="btn blue btn-sm">
                    <i class="fa fa-spinner fa-spin spin-submit"></i>
                    <i class="fa fa-check"></i> @T("Common.Save")
                </button>
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                    <i class="fa fa-times"></i> @T("Common.Close")
                </button>
            </div>
        </div>
    </form>
</div>

<script>
    frmEditAuditCouncil1 = {
        el: 'form[data-client-form-id="@ClientFormId"]',
        $el: {},
        winForm: {},
        $employeeId: $('#@Html.FieldIdFor(m => m.EmployeeId)'),
        init: function () { }
    };

    frmEditAuditCouncil1.init = function () {
        //Init Window
        frmEditAuditCouncil1.$el = $(frmEditAuditCouncil1.el);
        frmEditAuditCouncil1.winForm = frmEditAuditCouncil1.$el.data('winForm');
    };

    $(function () {
        frmEditAuditCouncil1.init();
    });
</script>

