@model AuditDetailModel
@{
    Layout = null;
}

<div class="form fixed-layout-form">
    <form data-form-type="ajax" class="form-horizontal">
        <div class="form-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Sửa kết quả kiểm kê</h4>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.AuditId)
                @Html.HiddenFor(m => m.ItemId)

                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.ItemId, true, new { @class = "control-label col-md-3" }, true)
                    <div class="col-md-9">
                        @Html.DropDownListFor(m => m.ItemId, Model.AvailableItems, new { @disabled = "disabled" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.Quantity, true, new { @class = "control-label col-md-3" }, true)
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.Quantity, new { @readonly = "readonly" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.AuditQuantity, true, new { @class = "control-label col-md-3" }, true)
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.AuditQuantity, new { htmlAttributes = new { style = "width: 100%" } })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.Conclude, true, new { @class = "control-label col-md-3" }, true)
                    <div class="col-md-9">
                        @Html.EditorFor(m => m.Conclude, new { htmlAttributes = new { style = "width: 100%" } })
                    </div>
                </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="submit" class="btn blue btn-sm">
                    <i class="fa fa-spinner fa-spin spin-submit"></i>
                    <i class="fa fa-check"></i> @T("Common.Save")
                </button>
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                    <i class="fa fa-times"></i> @T("Common.Close")
                </button>
            </div>
        </div>
    </form>
</div>

<style>
    #Quantity{
        width:100%;
    }
    #ItemId{
        width:100%;
    }
</style>
<script>
    frmEditItem1 = {
        el: 'form[data-client-form-id="@ClientFormId"]',
        $el: {},
        winForm: {},
        $itemId: $('#@Html.FieldIdFor(m => m.ItemId)'),
       
        init: function () { }
    };

    frmEditItem1.init = function () {
        //Init Window
        frmEditItem1.$el = $(frmEditItem1.el);
        frmEditItem1.winForm = frmEditItem1.$el.data('winForm');
    };

    $(function () {
        frmEditItem1.init();
    });
</script>
