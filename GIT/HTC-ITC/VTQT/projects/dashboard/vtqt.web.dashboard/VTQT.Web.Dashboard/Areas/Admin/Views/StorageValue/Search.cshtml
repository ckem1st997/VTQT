@{
    Layout = null;
}

<style>
    span.k-select {
        display: none !important;
    }
</style>

<div class="form fixed-layout-form">
    <form class="form-horizontal">
        <div class="form-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">Tìm kiếm</h4>
            </div>
            <div class="modal-body">
                <div class="form-group form-group-sm">
                    <label class="control-label col-md-4" for="Status" title="Trạng thái">Từ khóa:</label>
                    <div class="col-md-8">
                        <input class="form-control text-box single-line" id="Key" name="Key" style="width: 100%" type="text" value="">
                    </div>
                </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="submit" class="btn blue btn-sm">
                    <i class="fa fa-spinner fa-spin spin-submit"></i>
                    <i class="fa fa-check"></i> Tìm kiếm
                </button>
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                    <i class="fa fa-times"></i> @T("Common.Close")
                </button>
            </div>
        </div>
    </form>
</div>

<script>
      frmSearchKeyWord = {
        el: 'form[data-client-form-id="@ClientFormId"]',
        $el: {},
        winForm: {},
        $searchKey: $('#Key'),
        init: function () { }
    };
    frmSearchKeyWord.init = function () {
        //Init Window
        frmSearchKeyWord.$el = $(frmSearchKeyWord.el);
        frmSearchKeyWord.winForm = frmSearchKeyWord.$el.data('winForm');
    };
    
    $(function () {
        frmSearchKeyWord.init();
    });
</script>