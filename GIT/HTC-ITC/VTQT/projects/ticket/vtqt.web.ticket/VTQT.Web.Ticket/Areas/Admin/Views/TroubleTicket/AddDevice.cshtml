@model DeviceTicketModel
@{
    Layout = null;
}

<script>
    frmAddDevice = {
        el: 'form[data-client-form-id="@ClientFormId"]',
        $el: {},
        winForm: {},
        init: function () { }
    };
</script>

<div class="form fixed-layout-form">
    <form class="form-horizontal">
        <div class="form-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">@T("Ticket.Devices.AppActions.Create")</h4>
            </div>
            <div class="modal-body">
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.DeviceId, true, new { @class = "control-label col-md-4" }, true)
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.DeviceId, Model.AvailableDevices, "Thiết bị", new { @class = "form-control", @style = "width: 100%" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.StartDate, true, new { @class = "control-label col-md-4" }, true)
                    <div class="col-md-8">
                        @Html.EditorFor(m => m.StartDate, new { pickTime = true, htmlAttributes = new { style = "width: 100%", @class = "form-control" } })                   
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.FinishDate, true, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(m => m.FinishDate, new { pickTime = true, htmlAttributes = new { style = "width: 100%", @class = "form-control" } })                  
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.PhenomenaId, true, new { @class = "control-label col-md-4" }, true)
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.PhenomenaId, Model.AvailablePhenomenas, "Hiện tượng", new { @class = "form-control", @style = "width: 100%" })               
                    </div>
                </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="submit" class="btn blue btn-sm">
                    <i class="fa fa-spinner fa-spin spin-submit"></i>
                    <i class="fa fa-check"></i> @T("Common.Save")
                </button>
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                    <i class="fa fa-times"></i> @T("Common.Close")
                </button>
            </div>
        </div>
    </form>
</div>

<script>       
    frmAddDevice.init = function () {
        frmAddDevice.$el = $(frmAddDevice.el);
        frmAddDevice.winForm = frmAddDevice.$el.data('winForm');
    };

    $(function () {
        frmAddDevice.init();
    });
</script>