@model TechnologyModel
@{
    Layout = null;
}

<script>
    frmAddTechnologySucessWF = {
        el: 'form[data-client-form-id="@ClientFormId"]',
        $el: {},
        winForm: {},
        init: function () { }
    };
</script>

<div class="form fixed-layout-form">
    <form class="form-horizontal">
        <div class="form-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">@T("Ticket.TechnologySucess.AppActions.Create")</h4>
            </div>
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.FtthId)

            <div class="modal-body">
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.PhenomenaId, true, new { @class = "control-label col-md-4" },true)
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.PhenomenaId, Model.AvailablePhenomena, "Hiện tượng", new { @class = "form-control", @style = "width: 100%" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.ReasonId, true, new { @class = "control-label col-md-4" }, true)
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.ReasonId, Model.AvailableReason, "Nguyên nhân", new { @class = "form-control", @style = "width: 100%" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.DetailReason, true, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.DetailReason, new  { style = "width: 100%", @class = "form-control"  })                  
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.StatusId, true, new { @class = "control-label col-md-4" },true)
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.StatusId, Model.AvailableStatus, "Tình trạng sự cố", new { @class = "form-control", @style = "width: 100%" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.Treatment, true, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.Treatment, new  { style = "width: 100%", @class = "form-control"  })                  
                    </div>
                </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="submit" class="btn blue btn-sm">
                    <i class="fa fa-spinner fa-spin spin-submit"></i>
                    <i class="fa fa-check"></i> @T("Common.Save")
                </button>
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                    <i class="fa fa-times"></i> @T("Common.Close")
                </button>
            </div>
        </div>
    </form>
</div>

<script>       
    frmAddTechnologySucessWF.init = function () {
        frmAddTechnologySucessWF.$el = $(frmAddTechnologySucessWF.el);
        frmAddTechnologySucessWF.winForm = frmAddTechnologySucessWF.$el.data('winForm');
    };

    $(function () {
        frmAddTechnologySucessWF.init();
    });
</script>


