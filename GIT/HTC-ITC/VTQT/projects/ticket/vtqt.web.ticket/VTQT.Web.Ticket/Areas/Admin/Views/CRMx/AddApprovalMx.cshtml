@model ApprovalCRMxModel
@{
    Layout = null;
}

<script>
    frmAddApprovalMx = {
        el: 'form[data-client-form-id="@ClientFormId"]',
        $el: {},
        winForm: {},
        init: function () { }
    };
</script>

<div class="form fixed-layout-form">
    <form class="form-horizontal">
        <div class="form-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">@T("Ticket.ApprovalCR.AppActions.Create")</h4>
            </div>
            <div class="modal-body">
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.Approver, true, new { @class = "control-label col-md-4" }, true)
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.Approver, Model.AvailableApprovers, "Người phê duyệt", new { @class = "form-control", @style = "width: 100%" }) 
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.Progress, true, new { @class = "control-label col-md-4" }, true)
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.Progress, Model.AvailableProgress, "Tiến độ", new { @class = "form-control", @style = "width: 100%" }) 
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.ReasonDetail, true, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.ReasonDetail, new { @class = "form-control", @style = "width: 100%" })                 
                    </div>
                </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="submit" class="btn blue btn-sm">
                    <i class="fa fa-spinner fa-spin spin-submit"></i>
                    <i class="fa fa-check"></i> @T("Common.Save")
                </button>
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                    <i class="fa fa-times"></i> @T("Common.Close")
                </button>
            </div>
        </div>
    </form>
</div>

<script>       
    frmAddApprovalMx.init = function () {
        frmAddApprovalMx.$el = $(frmAddApprovalMx.el);
        frmAddApprovalMx.winForm = frmAddApprovalMx.$el.data('winForm');
    };

    $(function () {
        frmAddApprovalMx.init();
    });
</script>