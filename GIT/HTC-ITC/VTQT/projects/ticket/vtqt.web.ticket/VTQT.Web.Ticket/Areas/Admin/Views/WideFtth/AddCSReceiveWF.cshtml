@model FtthModel
@{
    Layout = null;
}

<script>
    frmAddCSReceiveWF = {
        el: 'form[data-client-form-id="@ClientFormId"]',
        $el: {},
        winForm: {},
        init: function () { }
    };
</script>

<div class="form fixed-layout-form">
    <form class="form-horizontal">
        <div class="form-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">@T("Ticket.CSReceive.AppActions.Create")</h4>
            </div>
            @Html.HiddenFor(m => m.Code)
            @Html.HiddenFor(m => m.FinishDate)
            @Html.HiddenFor(m => m.CreatedDate)
            @Html.HiddenFor(m => m.CID)
            @Html.HiddenFor(m => m.Subject)

            <div class="modal-body">
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.ProjectCode, true, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.ProjectCode, Model.AvailableProject, "Dự án", new { @class = "form-control", @style = "width: 100%" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.CreatedBy, true, new { @class = "control-label col-md-4" }, true)
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.CreatedBy, Model.AvailableUsers, "Khách hàng", new { @class = "form-control", @style = "width: 100%" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.StartDate, true, new { @class = "control-label col-md-4" }, true)
                    <div class="col-md-8">
                        @Html.EditorFor(m => m.StartDate, new { pickTime = true, htmlAttributes = new { style = "width: 100%", @class = "form-control" } })                   
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.SlaStartTime, true, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(m => m.SlaStartTime, new { pickTime = true, htmlAttributes = new { style = "width: 100%", @class = "form-control" } })                  
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.ComplaintContent, true, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.ComplaintContent, new  { style = "width: 100%", @class = "form-control"  })                  
                    </div>
                </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="submit" class="btn blue btn-sm">
                    <i class="fa fa-spinner fa-spin spin-submit"></i>
                    <i class="fa fa-check"></i> @T("Common.Save")
                </button>
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                    <i class="fa fa-times"></i> @T("Common.Close")
                </button>
            </div>
        </div>
    </form>
</div>

<script>       
    frmAddCSReceiveWF.init = function () {
        frmAddCSReceiveWF.$el = $(frmAddCSReceiveWF.el);
        frmAddCSReceiveWF.winForm = frmAddCSReceiveWF.$el.data('winForm');
    };

    $(function () {
        frmAddCSReceiveWF.init();
    });
</script>
