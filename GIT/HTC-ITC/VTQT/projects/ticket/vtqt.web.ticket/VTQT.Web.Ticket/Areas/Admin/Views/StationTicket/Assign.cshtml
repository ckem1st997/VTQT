@model AssignmentModel
@{
    Layout = null;
}

<script>
    frmAssign = {
        el: 'form[data-client-form-id="@ClientFormId"]',
        $el: {},
        winForm: {},
        init: function () { }
    };
</script>

<div class="form fixed-layout-form">
    <form class="form-horizontal">
        <div class="form-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">@T("Ticket.ProblemTickets.AppActions.Assign")</h4>
            </div>
            <div class="modal-body">
                @Html.HiddenFor(m => m.Performer)
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.Assignee, true, new { @class = "control-label col-md-4" }, true)
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.Assignee, Model.AvailableUsers, "Người xử lý", new { @class = "form-control", @style = "width: 100%" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.AssignmentReason, true, new { @class = "control-label col-md-4" }, true)
                    <div class="col-md-8">
                        @Html.DropDownListFor(m => m.AssignmentReason, Model.AvailableReasons, "Lý do", new { @class = "form-control", @style = "width: 100%" })
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.AssignmentContent, true, new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(m => m.AssignmentContent, new { @class = "form-control", @style = "width: 100%" })
                    </div>
                </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="submit" class="btn blue btn-sm">
                    <i class="fa fa-spinner fa-spin spin-submit"></i>
                    <i class="fa fa-check"></i> @T("Common.Save")
                </button>
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                    <i class="fa fa-times"></i> @T("Common.Close")
                </button>
            </div>
        </div>
    </form>
</div>

<script>
    frmAssign.init = function () {
        frmAssign.$el = $(frmAssign.el);
        frmAssign.winForm = frmAssign.$el.data('winForm');
    };

    $(function () {
        frmAssign.init();
    });
</script>