@model UserModel
@{
    Layout = null;
}

<div class="form fixed-layout-form">
    <form data-form-type="ajax" class="form-horizontal">
        <div class="form-body">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                <h4 class="modal-title">@T("Master.AppActions.Users.Details")</h4>
            </div>
            <div class="modal-body">
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.UserName, true, new { @class = "control-label col-md-3" }, true)
                    <div class="col-md-9">
                        @Html.DisplayFor(m => m.UserName)
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.FirstName, true, new { @class = "control-label col-md-3" }, true)
                    <div class="col-md-9">
                        @Html.DisplayFor(m => m.FirstName)
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.LastName, true, new { @class = "control-label col-md-3" }, true)
                    <div class="col-md-9">
                        @Html.DisplayFor(m => m.LastName)
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.FullName, true, new { @class = "control-label col-md-3" }, true)
                    <div class="col-md-9">
                        @Html.DisplayFor(m => m.FullName)
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.Email, true, new { @class = "control-label col-md-3" }, true)
                    <div class="col-md-9">
                        @Html.DisplayFor(m => m.Email)
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    @Html.XBaseLabelFor(m => m.Active, true, new { @class = "control-label col-md-3" }, true)
                    <div class="col-md-9">
                        @Html.DisplayFor(m => m.Active)
                    </div>
                </div>
            </div>
            <div class="modal-footer form-actions">
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">
                    <i class="fa fa-times"></i> @T("Common.Close")
                </button>
            </div>
        </div>
    </form>
</div>
